{
  "name": "sotm-sync-server",
  "version": "0.0.1",
  "private": false,
  "scripts": {
    "start": "node src/app",
    "test": "jasmine",
    "lint": "eslint .",
    "all": "npm run lint && npm test"
  },
  "dependencies": {
    "async": "^2.1.4",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "socket.io": "^1.7.2",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "eslint": "^3.13.1",
    "jasmine": "^2.5.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wlindley/sotm-sync.git"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "rules": {
      "indent": [
        "error",
        "tab"
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "semi": [
        "error",
        "always"
      ],
      "eqeqeq": "error",
      "callback-return": "error",
      "eol-last": "error",
      "no-trailing-spaces": "error",
      "no-unused-vars": "error",
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "no-console": "off"
    },
    "env": {
      "node": true,
      "jasmine": true,
      "es6": true
    },
    "ecmaFeatures": {
      "blockBindings": true,
      "templateStrings": true
    }
  }
}
